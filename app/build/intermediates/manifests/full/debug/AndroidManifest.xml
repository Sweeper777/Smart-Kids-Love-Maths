<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartkidslovemaths"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/MyTheme" >
        <activity
            android:name="com.smartkidslovemaths.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartkidslovemaths.QuestionsActivity"
            android:label="@string/title_activity_questions"
            android:screenOrientation="landscape"
            android:theme="@style/MyTheme" >
        </activity>
        <activity
            android:name="com.smartkidslovemaths.ResultsActivity"
            android:label="@string/title_activity_results"
            android:screenOrientation="landscape"
            android:theme="@style/MyTheme" >
        </activity>
        <activity
            android:name="com.smartkidslovemaths.PrizeActivity"
            android:label="@string/title_activity_prize"
            android:screenOrientation="landscape"
            android:theme="@style/MyTheme" >
        </activity>
    </application>

</manifest>